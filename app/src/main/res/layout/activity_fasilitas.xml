<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.home.FasilitasActivity">

        <!-- Vector 1 -->
        <ImageView
            android:id="@+id/vector1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Tombol Back -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_circle"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:contentDescription="@string/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Teks fasilitas -->
        <TextView
            android:id="@+id/tv_fasilitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fasilitas"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintTop_toTopOf="@id/btn_back"
            app:layout_constraintBottom_toBottomOf="@id/btn_back"/>

        <ImageView
            android:id="@+id/vector2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="110dp"
            android:layout_marginStart="20dp"
            tools:layout_editor_absoluteY="91dp" />

        <TextView
            android:id="@+id/tv_laboratory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ruang Labotarium"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@id/tv_fasilitas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Grid layout for images -->
        <GridLayout
            android:id="@+id/grid_lab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="@+id/tv_laboratory"
            android:rowCount="3">

            <!-- Reduced height for images -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/labo1"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/labo2"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/labo3"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/labo4"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/labo5"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/labo6"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <TextView
            android:id="@+id/tv_perpus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ruang Perpustakaan"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/grid_lab"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Grid layout for images -->
        <GridLayout
            android:id="@+id/grid_perpus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="@+id/tv_perpus"
            android:rowCount="3">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/perpust1"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/perpust2"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/perpust3"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/perpust4"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <TextView
            android:id="@+id/tv_sarana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sarana/Prasana Pendukung"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/grid_perpus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Grid layout for images -->
        <GridLayout
            android:id="@+id/grid_sarana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="@+id/tv_sarana"
            android:rowCount="3">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/saran1"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/saran2"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/saran3"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/saran4"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@id/grid_sarana"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
